      <td><button id="0xF7609F" class="controller-button button-blue-0">Blue 0</button></td>
      <td><button id="0xF7E01F" class="controller-button button-white">White</button></td>
    </tr>
    <tr>
      <td><button id="0xF710EF" class="controller-button button-red-1">Red 1</button></td>
      <td><button id="0xF7906F" class="controller-button button-green-1">Green 1</button></td>
