<h1>Showing <%= @controller.name %></h1>

<table>
  <thead>
    <tr>
      <th>Controls</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><button id="0xF700FF" class="controller-button button-white">Increase</button></td>
      <td><button id="0xF7807F" class="controller-button button-white">Decrease</button></td>
